@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Inicia Sesion</h1>


@if (ViewData.Keys.Contains("mensaje"))
{
    <p style="color:red;" >
        @ViewData["mensaje"]
    </p>
}
<div class="card">
    <div class="card-body">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label" asp-for="Email"></label>
                <input class="form-control" asp-for="Email" autocomplete="true" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Password"></label>
                <input class="form-control" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-check mb-3">
                <label class="form-check-label" asp-for="Recuerdame"></label>
                <input type="checkbox" class="form-check-input" asp-for="Recuerdame" />
            </div>
            <button class="btn btn-primary" type="submit">Enviar</button>
            <a asp-action="registro" class="btn btn-success">Deseo registrarme</a>
            <a asp-action="LoginExterno" class="btn btn-success" asp-route-proveedor="Microsoft">Continuar con Microsoft</a>

        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

